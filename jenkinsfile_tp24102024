pipeline {
    agent {
        docker {
            image 'node:20-alpine'
        }
    }
    
    environment {
        fileName = 'file.txt'
        username = 'Achille'
    }
    
    parameters {
        string( name: "file")
        text(name:"content", description:"saisir le contenu du fichier")
        choice(name: "extension", choices:['txt', 'docx'])
    }

    stages {
        stage('initialisation') {
             steps {
            sh "echo 'File ${params.file}'"
            sh "echo 'Extension ${params.extension}'"
            sh "echo 'Content ${params.content}'"
            sh "printenv"
             }
        }
        stage('build') {
            when {
                allOf { expression { params.file}
                       expression { params.extension}
                    }
            }
            steps {
                sh "echo 'Hello ${env.username}' > ${params.file}.${params.extension}'"
            }
        }
        
        stage('test') {
            steps {
                sh 'ls -al'
                sh '''
                    npm --version
                '''
            }
        }
        
        
        stage('check') {
            steps {
                sh 'ls -al'
            }
        }
    }
}
